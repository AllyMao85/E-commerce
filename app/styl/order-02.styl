#root
  .order
    width 100%
    min-height 680px
    .heading
      position absolute
      width 100%
      height 180px
      z-index 888
      background-image url(/static/system/order-01.jpg)
    .main-content
      position relative
      padding 32px 20%
      z-index 999
      .title
        padding-top 32px
        font-size 32px
        font-weight 500
        .selected
          padding-left 32px
          font-size 16px
          font-weight normal
          &:last-of-type
            padding-left 0
      .shopcar-wrapper
        margin-top 48px
        padding 32px
        min-height 360px
        box-sizing border-box
        border 1px solid #ddd
        background-color #fff
        box-shadow 5px 2px 5px #ddd, -2px -5px 5px #ddd
        .car-wrapper
          .nothing
            text-align center
            width 100%
            height 240px
            line-height 240px
            font-size 24px
            color #999
          .item-list
            .first
              display flex
              flex-flow row nowrap
              text-align left
              padding-bottom 32px
              border-bottom 1px solid #ddd
              .selectall
                flex 0 0 100px
                width 100px
                color #999
                input
                  cursor pointer
              .course
                flex 0 0 270px
                width 270px
              .money
                flex 0 0 360px
                width 360px
            .item
              display flex
              flex-flow row nowrap
              width 100%
              padding 32px 0 12px
              border-bottom 1px solid #ddd
              .item-check
                flex 0 0 100px
                width 100px
                color #999
                height 150px
                line-height 150px
                input
                  cursor pointer
              .course
                flex 0 0 270px
                width 270px
                .post
                  vertical-align middle
                .title
                  display inline-block
                  font-size 16px
                  font-weight 700
                  padding-left 24px
              .money
                flex 0 0 360px
                width 360px
                height 150px
                line-height 150px
                color #fa3140
                font-size 24px
              .control
                height 150px
                line-height 150px
                font-size 24px
                cursor pointer
            .end
              text-align right
              height 120px
              line-height 120px
              .sum-money
                display inline-block
                font-size 14px
                .sum
                  color #fa3140
                  font-size 24px
                  padding-right 32px
              .confirm-buy
                display inline-block
                border 1px solid #fa3140
                background-color #fa3140
                color #fff
                line-height 24px
                height 24px
                padding 12px 24px
                cursor pointer
                &:hover
                  opacity .7
